.upload_container
  .col-md-4.col-md-push-4
    %h1
      Upload a Video
    = form_tag '/v/try_create', { :multipart => true } do
      .form-group
        %textarea.form-control{:name => "title", :placeholder => "Design title"}
      .form-group
        %textarea.form-control{:name => "description", :placeholder => "Video Description"}
      .form-group
        %label
          Video file
        = file_field_tag 'video_file'
      .form-group
        %label
          Image file
        = file_field_tag 'image_file'
      .form-group
        = submit_tag "Upload", :class => ["form-control", "btn", "btn-default"]
